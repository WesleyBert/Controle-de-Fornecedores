@model FornecedorModel
@{
    ViewData["Title"] = "Confirma apagar Fornecedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Fornecedor (@Model.Name) ?</h3>
</div>
<a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar</a>
<a class="btn btn-danger" role="button" asp-controller="Fornecedor" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>